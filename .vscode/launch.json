{
	"version": "0.2",
	"configurations": [
		{
			"name": "Debug minirt",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/minirt",
			"args": ["test_files/spheres.rt"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
		}
	]
}
